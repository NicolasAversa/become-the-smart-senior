{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2015",
    "allowJs": false,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "dist"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.ts"]
}
